<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="invoice" class="com.mycompany.promocalculator.Invoice" scope="prototype">
		<property name="invoiceName" value="autoInvoice"></property>
	</bean>
	<bean id="product" class="com.mycompany.promocalculator.Product" scope="prototype">
		<property name="price" value="0.0"></property>
		
		<property name="name" value="buy"></property>
	</bean>
</beans>
